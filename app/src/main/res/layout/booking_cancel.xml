<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/address_bg">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/ryt"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/close"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_toRightOf="@+id/ryt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Booking Cancel"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textColor="#000"/>
        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_below="@+id/header"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_above="@+id/yes"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:text="Are you sure you want to cancel the ride?"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#363f45"/>
        <TextView
            android:id="@+id/yes"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="YES"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/no"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:text="NO"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/yes"
            android:textSize="16dp"
            android:textColor="#000"/>

    </RelativeLayout>
</RelativeLayout>